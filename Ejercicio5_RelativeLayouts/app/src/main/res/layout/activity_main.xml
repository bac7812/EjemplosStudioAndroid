<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martin.relativelayouts.MainActivity">

    <FrameLayout
        android:id="@+id/topFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_dark">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/leftFrameLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@id/topFrameLayout"
        android:layout_alignParentLeft="true"
        android:background="@android:color/holo_red_dark">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/rightFrameLayout"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_below="@id/topFrameLayout"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_blue_dark">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/upperCenterFrameLayout"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@id/topFrameLayout"
        android:layout_toLeftOf="@id/rightFrameLayout"
        android:layout_toRightOf="@id/leftFrameLayout"
        android:background="@android:color/holo_orange_dark">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/lowerCenterFrameLayout"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/upperCenterFrameLayout"
        android:layout_toLeftOf="@id/rightFrameLayout"
        android:layout_toRightOf="@id/leftFrameLayout"
        android:background="@android:color/holo_purple">

    </FrameLayout>

</RelativeLayout>
