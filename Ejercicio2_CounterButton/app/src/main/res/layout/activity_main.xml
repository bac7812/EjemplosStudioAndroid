<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.martin.counterbutton.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pushTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pushMessage"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/pushButton"
        android:onClick="pushButtonOnClick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/press"/>

    <CheckBox
        android:id="@+id/enableCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="true"
        android:text="@string/enable_button" />

</LinearLayout>
